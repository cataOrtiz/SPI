

    <!-- start: LOGIN -->
    <div class="row">
      <div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
        <!-- start: LOGIN BOX -->

        <div class="box-login">
        <div class="row">
          <div class="col-md-2">
            
          </div>
          <div class="col-md-4">
                <div  style="float: left; width: 50%"%>
                <%= image_tag "Ingnovo.png", :class => "logo" %>
               </div>
          </div>
          <div class="col-md-4">
            
          </div>
        </div>


        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>

          <form class="form-login" action="index.html">
            <fieldset>
              <legend>
                Inicio de Sesión
              </legend>
              <p>
                Por favor, ingresa tu correo y contraseña para ingresar. 
              </p>
              <div class="form-group">
                <span class="input-icon">
                  <%= f.email_field :email, :class => 'form-control', :placeholder => 'Correo electrónico' %>
                  <i class="ti-user"></i> </span>
              </div>
              <div class="form-group form-actions">
                <span class="input-icon">
                  <%= f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder => 'Contraseña'%>
                  <i class="ti-lock"></i></span>        
                  <!-- end: LOGIN BOX -->
              </div>
              <div class="form-actions">
                <h5 id="styleSession"> <%= f.check_box :remember_me %> Recordarme </h5>
                <%= f.submit "Ingresar", :class => 'btn btn-lg btn-block' %>
                </div>
              </div>
              <div class="new-account">
                <h5> ¿No tienes cuenta?
                  <%= link_to "Registrarse", new_user_registration_path%>
                  </h5>
              </div>
            </fieldset>

          </form>
          <% end %>
          <!-- start: COPYRIGHT -->
          <div class="copyright">
            &copy; <span class="current-year"></span><span class="text-bold text-uppercase"> INGNOVO</span>. <span>USACH</span>
          </div>
          <!-- end: COPYRIGHT -->
        </div>
        <!-- end: LOGIN BOX -->
      </div>
    </div>